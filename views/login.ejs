<body style="background-color: #f8f9fa;">
    
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form id="form1" class="login100-form" onsubmit="event.preventDefault; $('#form1').hide(); $('#form2').show(); return false">
                    <img src="/img/logo.png" style="display:block; margin-left: 32%; margin-right: auto" />
                    <span class="login100-form-title p-b-43">
                        Login to continue
                    </span>
                   
                    <div class="wrap-input100">
                        <input id="email" class="input100" type="email" name="email" required>
                        <span class="focus-input100"></span>
                        <span class="label-input100">Email</span>
                    </div>
                    
                    
                    <div class="wrap-input100">
                        <input id="pass" class="input100" type="password" name="pass" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
                        <span class="focus-input100"></span>
                        <span class="label-input100">Password</span>
                    </div>

                    <div class="flex-sb-m w-full p-t-3 p-b-32">
                        <div class="contact100-form-checkbox">
                            <a href="/users/passwordreset" class="txt1">
                                Forgot Password?
                            </a>
                        </div>

                    </div>
            

                    <div class="container-login100-form-btn">
                        <button class="next100-form-btn">
                            NEXT
                        </button>
                        <span class="txt2">Don't have an account?</span>
                        <a href="/users/signup" class="txt3">
                            Sign Up
                        </a>
                    </div>
                    
                </form>
                
                <form id="form2" class="login100-form validate-form" style="display: none" action="/chat_new.html">
                    <img src="/img/logo.png" style="display:block; margin-left: 32%; margin-right: auto" />
                    <span class="login100-form-title p-b-43">
                        Login to continue
                    </span>
                     
                    <div id="ajax_alert" style="display: none">
                        <strong id="alert_text" style="display: none"></strong>
                        <a id="alert_close" href="#" class="close" data-dismiss="alert" aria-label="close" style="display: none">&times;</a>
                    </div>

                    <div class="wrap-input100">
                        <input id="username" class="input100" type="text" name="username">
                        <span class="focus-input100"></span>
                        <span class="label-input100">Username</span>
                    </div>
                    
                        <div class="flex-container">
                            <div>
                                <label class="chat-room">Select a Chat Room!</label>
                            </div>
                        
                            <div>
                                <span class="fa fa-info-circle" aria-hidden="true" data-toggle="tooltip" 
                                    title="Please select a chat room to start conversation with others logged in to the same room!" 
                                    style="font-size: 20px; padding: 20px 0 10px 10px; color: #030f40">
                                </span> 
                            </div>
                        </div>
                                            
                    <div class="select-chat-room">						
                        <select name="room" class="form-control form-control-lg">
                            <option value="High School Mathematics">High School Mathematics</option>
                            <option value="AeroScience">AeroScience</option>
                            <option value="COVID-19">COVID-19</option>
                        </select>
                    </div>
                   
                    <input id="email-hidden" type="hidden" name="email">
                    
                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn" type="submit">
                            LOGIN
                        </button>
                    </div>
                    
                    <a id="retry_login" href="/users/login" class="txt1" style="display: none; margin-top: 10px;">
                        Try signing in again
                    </a>
                    
                </form>
                <div class="login100-more"> 			
                    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                 <img src="/img/bg-01.jpg" style="background-image: url(/img/bg-01.jpg); max-width: 100%; max-height: 100%;"/> 
                            </div>
                            <div class="carousel-item">
                                <img src="/img/bg-02.jpg" style="background-image: url(/img/bg-02.jpg); max-width: 100%; max-height: 100%;"/> 
                            </div>
                            <div class="carousel-item">
                                <img src="/img/bg-03.jpg" style="background-image: url(/img/bg-03.jpg); max-width: 100%; max-height: 100%;"/> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    

    
    
